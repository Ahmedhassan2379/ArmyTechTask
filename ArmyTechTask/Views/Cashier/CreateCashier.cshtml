@using ArmyTechTask.BLL.ViewModel.Cashier;
@model  CreateCashierViewModel
@{
    ViewBag.Title = "CreateCashier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="panel panel-primary">
    <div class="panel-heading" style="font-size:20px;"> New Cashier </div>
    <br />
    <div class="panel-body">

        @using (Html.BeginForm("CreateCashier", "Cashier"))
        {
            @Html.ValidationSummary(true, "Please Fix The Following Errors")
            <div class="form-group">
                @Html.LabelFor(m => m.CashierName)
                @Html.TextBoxFor(m => m.CashierName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CashierName, "", htmlAttributes: new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.BranchID)
                @Html.DropDownListFor(m => m.BranchID, new SelectList(Model.Branches, "ID", "BranchName"), "Select Branch Name", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BranchID, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>